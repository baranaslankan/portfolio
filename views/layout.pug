doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Portfolio Admin
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    style.
      body { font-family: 'Inter', Arial, sans-serif; background: #f8f9fa; }
      .navbar { background: #22223b; }
      .navbar-brand, .nav-link, .navbar-nav .nav-link.active { color: #f2e9e4 !important; }
      .btn-primary { background: #4a4e69; border: none; }
      .btn-danger { background: #c9ada7; border: none; color: #22223b; }
      .form-label { color: #4a4e69; }
  body
    nav.navbar.navbar-expand-lg
      .container
        a.navbar-brand(href='/admin/projects') Admin Dashboard
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/admin/projects') Projects
            li.nav-item
              a.nav-link(href='/admin/skills') Skills
    .container.mt-4
      block content
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js') 